{
    "files.associations": {
        "CODEOWNERS": "ignore"
    },
    "editor.rulers": [
        {
            "column": 99,
            "color": "gray"
        },
        {
            "column": 119,
            "color": "purple"
        }
    ],
    "editor.formatOnSave": true,
    // disabled format toml's on save because pyproject.toml generated by projen is not read-only
    // so it the formatted version was regularly conflicting with the projen-generated version
    "[toml]": {
        "editor.formatOnSave": false
    },
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // "mypy-type-checker.args": [
    //     "--config-file=${workspaceFolder}/pyproject.toml"
    // ],
    // https://github.com/astral-sh/ruff-vscode
    "ruff.configuration": "${workspaceFolder}/pyproject.toml",
    "ruff.organizeImports": true,
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
    },
    "notebook.formatOnSave.enabled": true,
    "notebook.codeActionsOnSave": {
        "notebook.source.fixAll": "explicit",
        "notebook.source.organizeImports": "explicit"
    },
    "python.analysis.autoImportCompletions": true,
    "python.analysis.indexing": true,
    "python.languageServer": "Pylance",
    "python.analysis.completeFunctionParens": true,
    // Python Envy: venv name setting, default is .venv
    "pythonEnvy.venvName": ".venv",
    // disable the info visibility of the interpreter. E.g.: Python Envy: interpreter set to: /<path-to-venv>/.venv/bin/python
    "python.interpreter.infoVisibility": "never",
}